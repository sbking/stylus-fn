/**
 * Returns true if all of the values in the list or hash map pass the iterator
 * truth test.
 */

@import "../utility/identity";

fn-every(list, iterator = null) {
  iterator = iterator || fn-identity;

  every = true;
  if list is a "object" {
    every = every and iterator(value, key) for key, value in list;
  } else {
    every = every and iterator(value, key) for value, key in list;
  }
  return every;
}